<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog id="helloDialog" title="Hello">
		<form:SimpleForm editable="true">
			<form:content>
				<Label text="Date"></Label>
				<DatePicker displayFormat="short" editable="false" id="ticketDate"></DatePicker>
				<Label text="ProductId"></Label>
				<Input id="ticketProductId"></Input>
				<Label text="Product"></Label>
				<Input id="ticketProduct" showValueHelp="true" valueHelpRequest="onTicketRequest"></Input>
		
				<Label text="Quantity"></Label>
				<Input id="ticketQuantity"></Input>
				<Label></Label>
				<Button type="Emphasized" text="RaiseTicket" press="onRaiseTicket"></Button>
				<Button press="onTicketClose" text="Close" type="Reject"></Button>
			</form:content>
		</form:SimpleForm>
	</Dialog>
</core:FragmentDefinition>